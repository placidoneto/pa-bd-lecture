generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  movies        Movie[]

  @@map("users")
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String
  releaseDate DateTime
  created_at  DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?

  @@map("movies")
}
